{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@assets": [
        "./src/assets/*"
      ],
      "@components": [
        "./src/components/*"
      ],
      "@layouts": [
        "./src/layouts/*"
      ],
      "@pages": [
        "./src/pages/*"
      ],
      "@scripts": [
        "./src/scripts/*"
      ],
      "@styles": [
        "./src/styles/*"
      ],
      "@test": [
        "./src/test/*"
      ],
      "@utils": [
        "./src/utils/*"
      ]
    }
  },
}
